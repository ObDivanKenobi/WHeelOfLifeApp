@model WheelOfLifeApp.Models.CategoryViewModel
@{
    AjaxOptions updateCategories = new AjaxOptions
    {
        UpdateTargetId = "modalAddCategory",
        AllowCache = false,
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "onAddCategorySuccess"
    };
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Ajax.BeginForm("AddCategory", updateCategories))
        {
            <input id="isNewCategoryValid" type="hidden" name="isValidCategory" value="@Html.AttributeEncode(Model.IsValid)" />
            <div class="modal-header">
                <button type="button" class="close" onclick="form.reset()" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Добавление категории</h4>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(false, "Обнаружены следующие ошибки:", new { @class = "alert alert-danger" })
                <div class="form-group">
                    <label>Название категории</label>
                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="form.reset()" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn btn-success">Сохранить изменения</button>
            </div>
        }
    </div>
</div>
